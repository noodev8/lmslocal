<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production configuration - HTTPS only -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- Production domain -->
        <domain includeSubdomains="true">nook.noodev8.com</domain>

        <!-- Certificate pinning can be added here for enhanced security -->
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>

    <!-- Development/Testing configuration - Allow localhost cleartext -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator host -->
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>

    <!-- Allow local network IPs for development/testing on physical devices -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">192.168.1.0</domain>
    </domain-config>
</network-security-config>
